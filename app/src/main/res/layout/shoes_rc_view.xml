<?xml version="1.0" encoding="utf-8"?>



<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
       >

        <ImageView
            android:id="@+id/shoeImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="center"
            android:background="#F5F5F5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/bestSellerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEST SELLER"
            android:fontFamily="@font/nunito"
            android:textColor="@color/button_color"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/shoeImage"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/shoeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nike Jordan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/text_color"
            app:layout_constraintTop_toBottomOf="@id/bestSellerLabel"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/shoePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$493.00"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/shoeName"
            app:layout_constraintStart_toStartOf="parent"/>

